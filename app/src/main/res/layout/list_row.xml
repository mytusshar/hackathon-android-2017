<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:elevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/custom_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15dp">

        <ImageView
            android:id="@+id/list_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cheese_1" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/list_thumbnail"
            android:text="Title"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/list_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/list_thumbnail"
            android:layout_alignLeft="@+id/list_title"
            android:layout_alignStart="@+id/list_title"
            android:text="Likes"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/list_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/list_likes"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/list_likes"
            android:layout_toRightOf="@+id/list_likes"
            android:text="Views"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/list_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:visibility="gone"
        android:layout_marginRight="4dp"
        android:padding="15dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />
</LinearLayout>
</android.support.v7.widget.CardView>